<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/greyConstraintLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/buttonTextColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
            android:id="@+id/thanksTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/singButton"

            android:layout_marginBottom="60dp"
            android:text="Done!"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:textStyle="bold"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            app:layout_constraintTop_toBottomOf="@id/thanksTextView"
            app:layout_constraintLeft_toLeftOf="@id/thanksTextView"
            android:layout_marginRight="88dp"
            android:layout_marginTop="16dp"
            android:text="Message with a link\nhas been sent to your email"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="normal"
    />
    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="54dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textAllCaps="false"
            android:text="Back to sing in page"
            android:textStyle="normal"
            android:textColor="@color/buttonTextColor"
            android:background="@color/white"
    />


</androidx.constraintlayout.widget.ConstraintLayout>